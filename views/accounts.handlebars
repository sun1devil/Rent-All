<div class="container" >
  <header class="create-acct-wrap header-wrap" align="center">
  <h1>Create Your Account</h1>
  <h3 id="create-err-msg"></h3>
 </header>


<h3 id="err-msg"></h3>

<form id= "create-form">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputFirst">First Name</label>
      <input type="text" class="form-control" id="inputFirst" placeholder="John">
    </div>
    <div class="form-group col-md-6">
      <label for="inputLast">Last Name</label>
      <input type="text" class="form-control" id="inputLast" placeholder="Doe">
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail">Email</label>
      <input type="email" class="form-control" id="inputEmail" placeholder="Email">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPhone">Phone</label>

      <input type="text" class="form-control" id="inputPhone" placeholder="4155551234">
    </div>
  </div>

  <div class="form-group">
    <label for="inputStreet">Street</label>
    <input type="text" class="form-control" id="inputStreet" placeholder="1234 Your St">
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <input type="text" class="form-control" id="inputCity" placeholder="Your City">
    </div>
    <div class="form-group col-md-4">
      <label for="inputState">State</label>
